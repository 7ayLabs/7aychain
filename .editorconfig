# =============================================================================
# 7aychain Editor Configuration
# =============================================================================
# Maintains consistent coding styles across different editors and IDEs.
# See: https://editorconfig.org
# =============================================================================

root = true

# =============================================================================
# Default Settings
# =============================================================================
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

# =============================================================================
# Rust Files
# =============================================================================
[*.rs]
indent_size = 4
max_line_length = 100

# =============================================================================
# TOML Files (Cargo.toml, etc.)
# =============================================================================
[*.toml]
indent_size = 4

# =============================================================================
# YAML Files
# =============================================================================
[*.{yml,yaml}]
indent_size = 2

# =============================================================================
# JSON Files
# =============================================================================
[*.json]
indent_size = 2

# =============================================================================
# Markdown Files
# =============================================================================
[*.md]
trim_trailing_whitespace = false
max_line_length = off

# =============================================================================
# Shell Scripts
# =============================================================================
[*.sh]
indent_size = 2

# =============================================================================
# Makefile
# =============================================================================
[Makefile]
indent_style = tab

# =============================================================================
# Git Files
# =============================================================================
[.git*]
indent_size = 4
